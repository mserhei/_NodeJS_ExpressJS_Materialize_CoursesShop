<h1>Add Course</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="course_name" name="title" type="text" class="validate" required>
        <label for="course_name">Course name</label>
        <span class="helper-text" data-error="enter course name" data-success="success"></span>
    </div>

    <div class="input-field">
        <input id="course_price" name="price" type="text" class="validate" required min="1">
        <label for="course_price">Course price</label>
        <span class="helper-text" data-error="enter course price" data-success="success"></span>
    </div>

    <div class="input-field">
        <input id="course_img" name="img" type="text" class="validate" required>
        <label for="course_img">Course URL picture</label>
        <span class="helper-text" data-error="enter course URL picture" data-success="success"></span>
    </div>

    <button class="btn btn-primary">Add course</button>
</form>