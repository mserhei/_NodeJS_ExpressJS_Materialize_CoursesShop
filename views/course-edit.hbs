<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input id="course_name" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="course_name">Course name</label>
        <span class="helper-text" data-error="enter course name" data-success="success"></span>
    </div>

    <div class="input-field">
        <input id="course_price" name="price" type="text" class="validate" required min="1" value="{{course.price}}">
        <label for="course_price">Course price</label>
        <span class="helper-text" data-error="enter course price" data-success="success"></span>
    </div>

    <div class="input-field">
        <input id="course_img" name="img" type="text" class="validate" required value="{{course.img}}">
        <label for="course_img">Course URL picture</label>
        <span class="helper-text" data-error="enter course URL picture" data-success="success"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button class="btn btn-primary">Edit course</button>
</form>